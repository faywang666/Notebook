@page "/"

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<div class="d-flex">
    @foreach (var note in notes)
    {
        <Card Title="@note.Title" Text="@note.Text" IsFeature="@note.IsFeature">

            <button class="btn btn-primary">Button for @note.Title</button>
        </Card>
        
    }
</div>
@code {
    private class Note (string title, string text, bool isFeature)
    {
        public string Title { get; set; } = title;
        public string Text { get; set; } = text;
        public bool IsFeature { get; set; } = isFeature;
    }

    List<Note> notes = new List<Note>
    {
        new Note("Title1", "Text1", true),
        new Note("Title2", "Text2", false),
        new Note("Title3", "Text3", false),
        new Note("Title4", "Text4", false),
    };
}